generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  password_hash String
  email         String?   @unique
  public_id     String    @unique
  create_at     DateTime  @default(now())
  projects      Project[]
}

model Project {
  id             String   @id @default(uuid())
  name           String
  user_id        String?
  create_at      DateTime @default(now())
  last_active_at DateTime @updatedAt
  token          String   @unique
  user           User?    @relation(fields: [user_id], references: [id], onDelete: Cascade)
  routes         Route[]
}

model Route {
  id            String   @id @default(uuid())
  path          String
  verb          String?  @default("GET")
  project_id    String
  create_at     DateTime @default(now())
  project       Project  @relation(fields: [project_id], references: [id], onDelete: Cascade)
  content_type  String  @default("application/json")
  response_body Storage?

  @@unique([project_id, path, verb])
}

model Storage {
  id      String @id
  payload Json
  route   Route  @relation(fields: [id], references: [id], onDelete: Cascade)
}
