generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  public_id     String    @unique
  password_hash String
  email         String?   @unique
  projects      Project[]
  create_at     DateTime  @default(now())
}

model Project {
  id             String   @id @default(uuid())
  project_name   String
  user_id        String
  user           User     @relation(fields: [user_id], references: [id])
  routes         Route[]
  create_at      DateTime
  last_active_at DateTime @updatedAt
}

model Route {
  id         String   @id @default(uuid())
  path       String
  project_id String
  project    Project  @relation(fields: [project_id], references: [id])
  data       Storage?
  create_at  DateTime
}

model Storage {
  id        String   @id
  data      Json
  path_id   String   @unique
  user      Route    @relation(fields: [path_id], references: [id])
  create_at DateTime
}
