generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  password_hash String
  email         String?   @unique
  public_id     String    @unique
  create_at     DateTime  @default(now())
  projects      Project[]
}

model Project {
  id             String   @id @default(uuid())
  project_name   String
  user_id        String?
  create_at      DateTime @default(now())
  last_active_at DateTime @updatedAt
  token          String   @unique
  user           User?    @relation(fields: [user_id], references: [id], onDelete: Cascade)
  routes         Route[]
}

model Route {
  id         String   @id @default(uuid())
  path       String
  project_id String
  create_at  DateTime @default(now())
  verb       String   @default("GET")
  project    Project  @relation(fields: [project_id], references: [id], onDelete: Cascade)
  data       Storage?

  @@unique([project_id, path, verb])
}

model Storage {
  path_id   String   @unique
  create_at DateTime @default(now())
  payload   Json
  route_id  String   @id
  route     Route    @relation(fields: [route_id], references: [id], onDelete: Cascade)
}
