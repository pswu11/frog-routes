// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String  @id @default(uuid())
  publicId            String  @unique
  passwordHashAndSalt String
  email               String? @unique
}

model Project {
  id          String @id @default(uuid())
  projectName String
}

model Route {
  id   String   @id @default(uuid())
  path String
  data Storage?
}

model Storage {
  id     String @id
  data   Json
  pathId String @unique
  user   Route  @relation(fields: [pathId], references: [id])
}
